---
import "../styles/global.css"
import "../styles/reset.css"
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import PillHeading from "./PillHeading.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif}"
);
const { name, imgPath, suptitle, Headtitle, variant } = Astro.props;
if (!images[imgPath])
  throw new Error(
    `"${imgPath}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif}"`
  );
---
<section class="full">
<Image src={images[imgPath]()} alt={name} />
<div class="box-banner">
<PillHeading Headtitle={Headtitle} {variant}></>
<p>{suptitle}</p>
</div>
</section>

<style>
.box-banner{
  display: inline-flex;
padding: 3rem 3.75rem 3.625rem 3.75rem;
flex-direction: column;
align-items: flex-start;
gap: 0.625rem;
border-radius: var(--border-r);
background: var(--hvid);
backdrop-filter: blur(5.5px);

}
 p {
font-family: var(--cabin);
color: var(--sort18);
font-size: 3.1rem;
font-style: normal;
font-weight: 700;
line-height: 3.625rem;
width: 41.75rem;
  }
</style>