---
import "../styles/global.css";
import "../styles/reset.css";
import { Icon } from "astro-icon/components";

const { title, text, iconNametop } = Astro.props;
---

<article>
  <div>
    <div class="flex">
      <Icon class="size" name={iconNametop} />
      <h3>{title}</h3>
    </div>
    <p class="brødtekst">{text}</p>
    <a href="#0">Read More</a>
  </div>
</article>

<style>
  :root {
    --arrow: url("../src/icons/pil.svg");
  }

  .flex {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.3rem;
  }
  .size {
    width: 25%;
  }
  article {
    display: flex;
    padding: 2.25rem 1.4375rem;
    margin-top: 34px;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: 1.2rem;
    border: 1px solid var(--lysegrå-border);
    background: var(--hvid);
    height: fit-content;
  }

  h3 {
    color: var(--sort18);
    font-family: var(--cabin);
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 600;
    line-height: 1.45rem;
  }

  p {
    padding-top: 10px;
  }
  a {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
    color: var(--sort18);
    text-decoration: none;
    font-family: var(--lato);
    padding-top: 22px;
  }
  a::after {
    content: "";
    flex-shrink: 0;
    width: 1.6rem;
    aspect-ratio: 1;
    justify-content: center;
    background: var(--arrow) 50% 50% / contain no-repeat;
  }
</style>
